{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "UI Debug",
            "type": "python",
            "request": "launch",
            "module": "src.gaia.interface.widget",
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "console": "integratedTerminal",
            "justMyCode": false,
            "subProcess": true,
            "stopOnEntry": false,
            "debugOptions": ["RedirectOutput"]
        },
        {
            "name": "CLI Debug",
            "type": "python",
            "request": "launch",
            "module": "gaia.cli",
            "args": ["prompt", "hi"],
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "console": "integratedTerminal",
            "justMyCode": false,
            "subProcess": true,
            "stopOnEntry": false,
            "debugOptions": ["RedirectOutput"],
        },
        {
            "name": "Pytest Debug (No Benchmark)",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests/test_gaia.py",
                "-v",
                "-s",
                "-k", "test_prompt_sweep"
            ],
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "PYTEST_DISABLE_BENCHMARK": "1"
            },
            "console": "integratedTerminal",
            "justMyCode": false,
            "subProcess": true,
            "stopOnEntry": false,
            "debugOptions": ["RedirectOutput"]
        }

    ]
}
