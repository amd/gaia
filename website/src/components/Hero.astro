<section id="hero" class="pt-32 pb-20 px-4 sm:px-6 lg:px-8">
  <div class="max-w-4xl mx-auto text-center">
    <!-- Main headline -->
    <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-white mb-6 leading-tight">
      Stop Renting AI. <span class="text-gaia-accent">Start Owning It.</span>
    </h1>

    <!-- Subheadline -->
    <p class="text-xl text-gaia-muted mb-10 max-w-2xl mx-auto">
      Private by design. No API fees. Your workflow, your way.
    </p>

    <!-- Install command -->
    <div class="bg-gaia-card rounded-lg border border-gaia-border p-4 max-w-xl mx-auto mb-6">
      <div class="flex items-center justify-between gap-4">
        <code class="font-mono text-sm sm:text-base text-gaia-text flex-1 text-left overflow-x-auto">
          <span class="text-gaia-accent">$</span> uv pip install amd-gaia && gaia chat
        </code>
        <button
          id="copy-btn"
          class="flex-shrink-0 px-3 py-1.5 bg-gaia-border hover:bg-gaia-muted/20 rounded text-sm text-gaia-muted hover:text-white transition-colors"
          data-copy="uv pip install amd-gaia && gaia chat"
          aria-label="Copy install command to clipboard"
        >
          Copy
        </button>
      </div>
    </div>

    <!-- Reassurance -->
    <p class="text-gaia-muted text-sm mb-10">
      That's it. You're running.
    </p>

    <!-- CTA -->
    <a
      href="https://docs.gaia.amd.com/quickstart"
      class="inline-flex items-center gap-2 bg-gaia-accent hover:bg-gaia-accent-hover text-white font-semibold px-8 py-3 rounded-lg transition-colors"
    >
      Get Started
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
      </svg>
    </a>
  </div>
</section>

<script>
  const copyBtn = document.getElementById('copy-btn');
  if (copyBtn) {
    copyBtn.addEventListener('click', async () => {
      const text = copyBtn.getAttribute('data-copy') || '';
      await navigator.clipboard.writeText(text);
      copyBtn.textContent = 'Copied!';
      setTimeout(() => {
        copyBtn.textContent = 'Copy';
      }, 2000);
    });
  }
</script>
