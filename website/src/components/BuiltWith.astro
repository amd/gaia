const examples = [
  {
    title: "Docs Q&A",
    description: "Chat with PDFs, markdown, code. RAG included.",
    link: "https://docs.gaia.amd.com/chat"
  },
  {
    title: "Jira Agent",
    description: '"Create a bug for the login timeout issue"',
    link: "https://docs.gaia.amd.com/jira"
  },
  {
    title: "Code Review",
    description: "Analyze PRs, suggest fixes, explain code.",
    link: "https://docs.gaia.amd.com/code"
  },
  {
    title: "Blender 3D",
    description: '"Add a red cube at the origin"',
    link: "https://docs.gaia.amd.com/blender"
  },
  {
    title: "Voice Chat",
    description: "Hands-free AI with Whisper + Kokoro TTS.",
    link: "https://docs.gaia.amd.com/talk"
  },
  {
    title: "Docker Helper",
    description: "Generate and debug Docker configurations.",
    link: "https://docs.gaia.amd.com/examples/docker"
  }
];
---

<section id="built-with" class="py-20 px-4 sm:px-6 lg:px-8">
  <div class="max-w-6xl mx-auto">
    <h2 class="text-3xl font-bold text-white text-center mb-12">
      Built with GAIA
    </h2>

    <!-- Examples Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      {examples.map((example) => (
        <a
          href={example.link}
          target="_blank"
          rel="noopener noreferrer"
          class="group bg-gaia-card rounded-lg border border-gaia-border p-6 hover:border-gaia-accent transition-colors"
        >
          <h3 class="text-lg font-bold text-white mb-3 group-hover:text-gaia-accent transition-colors">
            {example.title}
          </h3>
          <p class="text-gaia-muted text-sm mb-4">
            {example.description}
          </p>
          <span class="inline-flex items-center gap-1 text-gaia-accent text-sm font-medium group-hover:gap-2 transition-all">
            Example
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
            </svg>
          </span>
        </a>
      ))}
    </div>
  </div>
</section>
