<section id="community" class="py-16 px-4 sm:px-6 lg:px-8 bg-gaia-card/30">
  <div class="max-w-4xl mx-auto">
    <h2 class="text-2xl font-bold text-white text-center mb-8">
      Community & Activity
    </h2>

    <!-- Stats Grid -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-6 mb-8">
      <!-- Stars -->
      <div class="text-center">
        <div class="text-3xl font-bold text-white mb-1" id="stars-count">—</div>
        <div class="text-gaia-muted text-sm flex items-center justify-center gap-1">
          <svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
          </svg>
          Stars
        </div>
      </div>

      <!-- Downloads -->
      <div class="text-center">
        <div class="text-3xl font-bold text-white mb-1" id="downloads-count">—</div>
        <div class="text-gaia-muted text-sm flex items-center justify-center gap-1">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
          </svg>
          Downloads/mo
        </div>
      </div>

      <!-- Contributors -->
      <div class="text-center">
        <div class="text-3xl font-bold text-white mb-1" id="contributors-count">—</div>
        <div class="text-gaia-muted text-sm flex items-center justify-center gap-1">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
          </svg>
          Contributors
        </div>
      </div>

      <!-- Recent Commits -->
      <div class="text-center">
        <div class="text-3xl font-bold text-white mb-1" id="commits-count">—</div>
        <div class="text-gaia-muted text-sm flex items-center justify-center gap-1">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
          </svg>
          Commits/mo
        </div>
      </div>
    </div>

    <!-- Last Release -->
    <p class="text-center text-gaia-muted text-sm mb-8">
      Last release: <span id="last-release" class="text-white">—</span>
    </p>

    <!-- CTA -->
    <div class="text-center">
      <a
        href="https://discord.gg/amd-gaia"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 bg-[#5865F2] hover:bg-[#4752C4] text-white font-semibold px-6 py-2.5 rounded-lg transition-colors"
      >
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path d="M20.317 4.37a19.791 19.791 0 00-4.885-1.515.074.074 0 00-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 00-5.487 0 12.64 12.64 0 00-.617-1.25.077.077 0 00-.079-.037A19.736 19.736 0 003.677 4.37a.07.07 0 00-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 00.031.057 19.9 19.9 0 005.993 3.03.078.078 0 00.084-.028c.462-.63.874-1.295 1.226-1.994a.076.076 0 00-.041-.106 13.107 13.107 0 01-1.872-.892.077.077 0 01-.008-.128 10.2 10.2 0 00.372-.292.074.074 0 01.077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 01.078.01c.12.098.246.198.373.292a.077.077 0 01-.006.127 12.299 12.299 0 01-1.873.892.077.077 0 00-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 00.084.028 19.839 19.839 0 006.002-3.03.077.077 0 00.032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 00-.031-.03zM8.02 15.33c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.956-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.956 2.418-2.157 2.418zm7.975 0c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.955-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.946 2.418-2.157 2.418z"/>
        </svg>
        Join Discord
      </a>
    </div>
  </div>
</section>

<script>
  function formatNumber(num) {
    if (num >= 1000) {
      return (num / 1000).toFixed(1) + 'k';
    }
    return num.toString();
  }

  async function fetchGitHubStats() {
    try {
      const response = await fetch('https://api.github.com/repos/amd/gaia');
      if (!response.ok) return;
      const data = await response.json();

      const starsEl = document.getElementById('stars-count');
      if (starsEl && data.stargazers_count) {
        starsEl.textContent = formatNumber(data.stargazers_count);
      }

      // Fetch contributors count
      const contribResponse = await fetch('https://api.github.com/repos/amd/gaia/contributors?per_page=1');
      if (contribResponse.ok) {
        const linkHeader = contribResponse.headers.get('Link');
        if (linkHeader) {
          const match = linkHeader.match(/page=(\d+)>; rel="last"/);
          if (match) {
            const contributorsEl = document.getElementById('contributors-count');
            if (contributorsEl) contributorsEl.textContent = match[1] + '+';
          }
        }
      }

      // Fetch latest release
      const releaseResponse = await fetch('https://api.github.com/repos/amd/gaia/releases/latest');
      if (releaseResponse.ok) {
        const releaseData = await releaseResponse.json();
        const releaseEl = document.getElementById('last-release');
        if (releaseEl && releaseData.tag_name) {
          releaseEl.textContent = releaseData.tag_name;
        }
      }
    } catch (error) {
      // Silently fail - defaults are already set
    }
  }

  document.addEventListener('DOMContentLoaded', () => {
    // Set defaults first (in case API fails)
    const starsEl = document.getElementById('stars-count');
    const downloadsEl = document.getElementById('downloads-count');
    const contributorsEl = document.getElementById('contributors-count');
    const commitsEl = document.getElementById('commits-count');
    const releaseEl = document.getElementById('last-release');

    if (starsEl) starsEl.textContent = '—';
    if (downloadsEl) downloadsEl.textContent = '—';
    if (contributorsEl) contributorsEl.textContent = '—';
    if (commitsEl) commitsEl.textContent = '—';
    if (releaseEl) releaseEl.textContent = '—';

    // Fetch real stats
    fetchGitHubStats();
  });
</script>
