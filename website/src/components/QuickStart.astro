<section id="quickstart" class="py-20 px-4 sm:px-6 lg:px-8">
  <div class="max-w-3xl mx-auto">
    <h2 class="text-3xl font-bold text-white text-center mb-12">
      Try It Right Now
    </h2>

    <div class="bg-gaia-card rounded-lg border border-gaia-border p-6">
      <div class="space-y-6">
        <!-- Step 1 -->
        <div>
          <p class="text-gaia-muted text-sm mb-2"># 1. Install</p>
          <pre class="bg-gaia-bg rounded-lg p-4 overflow-x-auto"><code class="font-mono text-sm"><span class="text-gaia-accent">$</span> uv pip install amd-gaia</code></pre>
        </div>

        <!-- Step 2 -->
        <div>
          <p class="text-gaia-muted text-sm mb-2"># 2. Start chatting</p>
          <pre class="bg-gaia-bg rounded-lg p-4 overflow-x-auto"><code class="font-mono text-sm"><span class="text-gaia-accent">$</span> gaia chat</code></pre>
        </div>

        <!-- Step 3 -->
        <div>
          <p class="text-gaia-muted text-sm mb-2"># 3. Or chat with your docs</p>
          <pre class="bg-gaia-bg rounded-lg p-4 overflow-x-auto"><code class="font-mono text-sm"><span class="text-gaia-accent">$</span> gaia chat --docs ./my-project</code></pre>
        </div>
      </div>

      <div class="mt-8 pt-6 border-t border-gaia-border">
        <p class="text-center text-gaia-muted">
          <span class="text-white">No API keys. No account. No configuration.</span><br />
          Models download automatically on first run.
        </p>
      </div>
    </div>

    <!-- CTA -->
    <div class="text-center mt-8">
      <a
        href="https://docs.gaia.amd.com/quickstart"
        class="inline-flex items-center gap-2 bg-gaia-accent hover:bg-gaia-accent-hover text-white font-semibold px-8 py-3 rounded-lg transition-colors"
      >
        Full quickstart guide
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
        </svg>
      </a>
    </div>
  </div>
</section>
